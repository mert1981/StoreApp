
@model IEnumerable<Product>



<div class="text-center" >
    <div class="display-6" >Products</div>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Product" asp-action="Create" >Create</a>
</div>
<table class="table table-strip table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Product prd in Model)
        {
            <tr>
                <td>@prd.Id</td>
                <td>@prd.ProductName</td>
                <td>@prd.Price.ToString("c")</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@prd.Id" >Update</a>
                        <a class="btn btn-primary" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.Id">See</a>
                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@prd.Id" >Remove</a>
  
                    </div> 
                    
                </td>
                
            </tr>
        }
    </tbody>
</table>