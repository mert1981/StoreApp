@model ProductDtoForInsertion

<div class="text-center" >
    <div class="display-6" >
        Create
    </div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="form-group my-3" >
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="CategoryId">Category Id</label>
        <select class="form-control" >
            @foreach (Category cat in ViewBag.Categories)
            {
                <option value="@cat.Id" >@cat.CategoryName</option>
            }
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary">Summary</label>
        <input asp-for="Summary" class="form-control" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-outline-danger" asp-controller="Product" asp-action="Index" >Back To Products</a>
        </div>
        
    </div>

</form>