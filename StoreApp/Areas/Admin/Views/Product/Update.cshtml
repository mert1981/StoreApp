@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">
        Güncelleme
    </div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
 
    <div class="form-group my-3">
        <label asp-for="ProductName">Ürün Adı</label>
        <input asp-for="ProductName" class="form-control" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="CategoryId">Category Id</label>
        <select class="form-control" asp-for="CategoryId">
            @foreach (Category cat in ViewBag.Categories)
            {
                <option value="@cat.Id">@cat.CategoryName</option>
            }
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary">Özet</label>
        <input asp-for="Summary" class="form-control"/>
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="Price">Fiyat</label>
        <input asp-for="Price" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-check form-switch" >
        <input asp-for="Showcase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckdefault" />
        <label class="form-check-label" for="flexSwitchCheckdefault">Showcase</label>
    </div>


    <div class="my-3" >
        <img class="rounded shadow" width="150px" src="@Model?.ImageUrl" />
    </div>


    <div class="form-group my-3">
        <label asp-for="ImageUrl">Ürün Resmi</label>
        <input name="file" type="file" class="form-control" />
        
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>


    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">Kaydet</button>
            <a class="btn btn-outline-danger" asp-controller="Product" asp-action="Index">Ürünlere Geri Dön</a>
        </div>

    </div>

</form>