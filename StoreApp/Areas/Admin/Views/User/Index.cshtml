@model IEnumerable<IdentityUser>

<div class="text-center my-5">
    <h2>Users</h2>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-outline-success" asp-area="Admin" asp-controller="User" asp-action="Create">Create</a>
</div>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Roles</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>-</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-sm btn-warning rounded-0" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-id="@user.UserName">Güncelle</a>
                        <a class="btn btn-sm btn-info rounded-0" asp-area="Admin" asp-controller="User" asp-action="ResetPassword">Şifreyi Sıfırla</a>
                        
                        
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>