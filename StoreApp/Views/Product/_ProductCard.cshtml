@using StoreApp.Infrastructe.Extensions
@model Product 


<div class="col-md-4 col-sm-12 my-3" >
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model?.ImageUrl" alt="product">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.Price.ToString("c")</p>
            <div class="btn-group">
                <a asp-controller="Product" asp-action="Get" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
                <form id="@Model.Id" asp-page="/cart" method="post">
                    <input  type="hidden" asp-for="Id" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-outline-primary">Add To Cart</button>
                </form>
            </div>
            
            
        </div>
    </div>
</div>
