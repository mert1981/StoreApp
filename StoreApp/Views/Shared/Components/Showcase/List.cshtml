@model IEnumerable<Product>

<div class="mt-5 text-center border-bottom ">
    <h6 class="display-6" >Products</h6>
</div>

<div class="row"> 
    @foreach (var prd in Model)
    {
        <div class="col-md-3 my-3">
            <div class="card" style="width:18 rem;">
                <div class="card-body" >
                    <h5 class="card-title">@prd.ProductName</h5
                    <p class="card-text" >@prd.Price</p>
                    <a asp-controller="Product" asp-action="Update" asp-route-id="@prd.Id" >Güncelle</a>
                </div>
                <div class="card-footer" >
                    <div class="d-flex justify-content-between">
                        <div class="form-check form-switch">
                            <input type="hidden" name="Id" value="@prd.Id" />
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" checked="@prd.ShowCase" disabled />
                            <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    }
</div>